{
  "manifest_version": 3,
  "name": "react-zerodha-kite",
  "description": "chrome extension zerodha-kite",
  "version": "1.0.0",
  "action": {
    "default_title": "zerodha-kite-popup",
    "default_icon": "icon.png"
  },

  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "identity",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://chatgpt.com/*",
        "*://www.example.com/*",
        "*://another-website.com/*"
      ],
      "js": ["contentScript.js", "jquery.min.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "jquery.min.js",
        "publisher.min.css",
        "publisher.js",
        "EQUITY_L.csv",
        "buy-button.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
