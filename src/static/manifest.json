{
  "manifest_version": 3,
  "name": "react-zerodha-kite",
  "description": "chrome extension zerodha-kite",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "zerodha-kite-popup",
    "default_icon": "icon.png"
  },

  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "identity",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js", "jquery.min.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["EQUITY_L.csv", "publisher.js", "jquery.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
